<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
      <% include partials/top %>
      <!-- main start-->

      <!-- views/posts/edit.ejs -->
      <div class="edit">
        <div class="buttons">
          <button onclick="history.back()">Back</button>
        </div>
        <h3>Edit Post</h3>
        <form class="checkValidation" action="/posts/<%=post._id%>?_method=put" method="post">
          <div class="inputs">
            <div class="floats">
              <label>Title</label>
              <input type="text" name="post[title]" value="<%=post.title%>">
            </div>
            <div class="floats">
              <label>Body</label>
              <textarea name="post[body]"><%=post.body%></textarea>
            </div>
          </div>
          <div class="buttons">
            <button type="submit">Submit</button>
          </div>
        </form>
      </div>

      <!-- main end -->
    </div><!--posts end -->

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
